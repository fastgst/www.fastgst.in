{
  "name": "fastgst-website",
  "version": "1.0.0",
  "description": "FastGST.in static website built with Eleventy",
  "scripts": {
    "build:css": "tailwindcss -i ./src/css/input.css -o ./_site/css/styles.css --minify",
    "watch:css": "tailwindcss -i ./src/css/input.css -o ./_site/css/styles.css --watch",
    "build:eleventy": "eleventy",
    "build": "npm run build:eleventy && npm run build:css",
    "serve:eleventy": "eleventy --serve",
    "dev": "concurrently \"npm run watch:css\" \"npm run serve:eleventy\"",
    "start": "npm run dev",
    "clean": "rm -rf _site"
  },
  "keywords": [
    "eleventy",
    "static-site"
  ],
  "author": "FastGST.in",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "concurrently": "^9.2.1",
    "tailwindcss": "^3.4.0"
  }
}
