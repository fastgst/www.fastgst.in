<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <meta name="description" content="{{ description }}">
    <meta name="author" content="{{ author or 'FastGST.in' }}">
    
    <!-- Favicon -->
    <link rel="icon" type="image/webp" href="/images/fastgst.webp">
    <link rel="apple-touch-icon" href="/images/fastgst.webp">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://www.fastgst.in{{ canonical or page.url }}">
    <meta property="og:title" content="{{ ogTitle or title }}">
    <meta property="og:description" content="{{ ogDescription or description }}">
    <meta property="og:image" content="https://www.fastgst.in/images/fastgst.webp">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:site_name" content="FastGST.in">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://www.fastgst.in{{ canonical or page.url }}">
    <meta property="twitter:title" content="{{ twitterTitle or title }}">
    <meta property="twitter:description" content="{{ twitterDescription or description }}">
    <meta property="twitter:image" content="https://www.fastgst.in/images/fastgst.webp">
    
    <!-- Canonical -->
    <link rel="canonical" href="https://www.fastgst.in{{ canonical or page.url }}">
    
    <!-- Robots -->
    <meta name="robots" content="{{ robots or 'index, follow' }}">
    <meta name="googlebot" content="{{ googlebot or 'index, follow' }}">
    
    <!-- Sitemap -->
    <link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml">
    
    <!-- DNS Prefetch & Preconnect for Analytics (reduces load time when triggered) -->
    <link rel="dns-prefetch" href="https://www.googletagmanager.com">
    <link rel="preconnect" href="https://www.googletagmanager.com" crossorigin>
    
    {% if preloadFonts %}
    <!-- Optimized Font Loading - Reduced weights for faster mobile -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"></noscript>
    {% endif %}
    
    <style>
        /* Critical CSS - Inlined for instant rendering */
        
        /* Font fallback to prevent layout shift */
        @font-face {
            font-family: 'Inter Fallback';
            font-style: normal;
            font-weight: 300 700;
            src: local('Arial');
            ascent-override: 90%;
            descent-override: 22%;
            line-gap-override: 0%;
            size-adjust: 107%;
        }
        
        /* Ensure text is visible while fonts load */
        body {
            font-family: 'Inter', 'Inter Fallback', system-ui, sans-serif;
        }
        
        /* CRITICAL: Above-the-fold styles for hero section */
        .gradient-bg {
            background: white;
        }
        
        .hero-pattern {
            background-image: radial-gradient(circle at 25% 25%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
        }
        
        /* Mobile: Disable expensive animations to improve render time */
        @media (max-width: 768px) {
            .fade-in,
            .float-animation,
            .glow-border::before,
            .shimmer-effect {
                animation: none !important;
            }
            
            /* Simplify transforms on mobile */
            .float-animation {
                transform: none !important;
            }
        }
        
        /* Desktop: Keep animations */
        @media (min-width: 769px) {
            .fade-in {
                animation: fadeIn 0.8s ease-in-out;
            }
            
            @keyframes fadeIn {
                from {
                    opacity: 0;
                    transform: translateY(20px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
            
            .float-animation {
                animation: float 6s ease-in-out infinite;
            }
            
            @keyframes float {
                0%, 100% {
                    transform: translateY(0px);
                }
                50% {
                    transform: translateY(-10px);
                }
            }
        }
        
        /* Content-visibility for below-the-fold sections on mobile */
        @media (max-width: 768px) {
            section:not(:first-of-type) {
                content-visibility: auto;
                contain-intrinsic-size: auto 500px;
            }
        }
    </style>
    
    <!-- Optimized CSS Loading: Async for non-critical styles -->
    <link rel="preload" href="/css/styles.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="/css/styles.css"></noscript>
    
    {% if schemaData %}
    <!-- Schema.org JSON-LD -->
    {{ schemaData | safe }}
    {% endif %}
    
    <!-- Analytics - Optimized for minimal impact on performance -->
    <script>
    // Minimal dataLayer initialization
    window.dataLayer = window.dataLayer || [];
    function gtag() { dataLayer.push(arguments); }
    
    // Pre-configure before script loads (reduces execution time)
    gtag('js', new Date());
    gtag('config', 'G-00HMKXKXG7', {
        'send_page_view': false  // We'll send it manually after load
    });
    
    var gaLoadStarted = false;
    
    function loadGoogleAnalytics() {
        if (gaLoadStarted) return;
        gaLoadStarted = true;
        
        // Use async + defer technique for minimal blocking
        var script = document.createElement('script');
        script.async = true;
        script.defer = true;
        script.src = 'https://www.googletagmanager.com/gtag/js?id=G-00HMKXKXG7';
        
        script.onload = function() {
            // Send initial pageview only after script fully loads
            gtag('event', 'page_view');
        };
        
        // Insert before first script (faster than appendChild)
        var firstScript = document.getElementsByTagName('script')[0];
        firstScript.parentNode.insertBefore(script, firstScript);
    }
    
    // Strategy 1: Load after user interaction (fastest for interactive users)
    ['mousedown', 'touchstart', 'keydown', 'wheel'].forEach(function(event) {
        document.addEventListener(event, loadGoogleAnalytics, { once: true, passive: true });
    });
    
    // Strategy 2: Fallback - Load after page becomes idle (for non-interactive users)
    if (document.readyState === 'complete') {
        if ('requestIdleCallback' in window) {
            requestIdleCallback(loadGoogleAnalytics, { timeout: 5000 });
        } else {
            setTimeout(loadGoogleAnalytics, 3000);
        }
    } else {
        window.addEventListener('load', function() {
            if ('requestIdleCallback' in window) {
                requestIdleCallback(loadGoogleAnalytics, { timeout: 5000 });
            } else {
                setTimeout(loadGoogleAnalytics, 3000);
            }
        });
    }
</script>
    
    <style>
        /* Critical CSS */
        * {
            box-sizing: border-box;
        }

        body {
            overflow-x: hidden;
            max-width: 100vw;
        }

        .container {
            max-width: 100%;
            overflow-x: hidden;
        }

        {% if customStyles %}
        {{ customStyles | safe }}
        {% endif %}
    </style>
</head>
<body class="font-sans text-gray-900 antialiased">
    {% include "header.njk" %}
    
    {{ content | safe }}
    
    {% include "footer.njk" %}
    
    {% include "scripts.njk" %}
</body>
</html>

